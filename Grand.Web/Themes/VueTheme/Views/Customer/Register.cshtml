        <div asp-validation-summary="ModelOnly" class="message-error alert alert-danger"></div>
        <b-card class="my-3" no-footer>
            <template v-slot:header>
                <h3 class="h5 mb-0">@T("Account.YourPersonalDetails")</h3>
            </template>
            <b-card-text>
