@model IList<ProductTagModel>
<div class="col-sm-12 product-tags-box px-0">
    <div class="product-tags-list">
        @for (int i = 0; i < Model.Count; i++)
        {
            <a class="ml-0 btn btn-outline-secondary producttag" href="@Url.RouteUrl("ProductsByTagName", new { SeName = Model[i].SeName })">
                @Model[i].Name <span>@T("Products.Tags.Count", Model[i].ProductCount)</span>
            </a>
        }
    </div>
</div>
