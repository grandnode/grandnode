@model IList<ManufacturerModel>
<div class="manufacturers generalMarginSupporter">
    @if (Model.Count == 1)
    {
        <span class="label">@T("Products.Manufacturer"):</span>
    }
    else
    {
        <strong class="label">@T("Products.Manufacturers"):</strong>
    }
    <span class="value">
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <a href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })">@item.Name</a>
            if (i != Model.Count - 1)
            {
                <span class="separator">,</span>
            }
        }
    </span>
</div>
