@model ActiveDiscussionsModel
@using Grand.Web.Models.Boards;
@{
    Layout = "_ColumnsOne";

    Html.AddTitleParts(T("Forum.PageTitle.ActiveDiscussions").Text);
}
<div class="page active-discussions-page">
    @await Component.InvokeAsync("ForumBreadcrumb")
    <partial name="_ForumHeader" />
    @await Component.InvokeAsync("Widget", new { widgetZone = "boards_activediscussions_after_header" })
    <partial name="_ActiveTopics" model="Model" />
    @await Component.InvokeAsync("Widget", new { widgetZone = "boards_activediscussions_after_topics" })


</div>
