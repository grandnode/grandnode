@using Grand.Services.Localization
@inject IStoreContext storeContext
@inject IWorkContext workContext
@{
    var link = Url.RouteUrl("BlogRSS", new { languageId = workContext.WorkingLanguage.Id }, this.Url.ActionContext.HttpContext.Request.Scheme);
    var storeName = storeContext.CurrentStore.GetLocalized(x => x.Name, workContext.WorkingLanguage.Id);
}
<link href="@link" rel="alternate" type="application/rss+xml" title="@storeName: Blog" />