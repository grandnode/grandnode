            {
                <li class="customer-info">
                    <a href="@Url.RouteUrl("CustomerInfo")" class="@if (Model.SelectedTab == CustomerNavigationEnum.Info)
                                                                   {<text>active</text>}
                                                                   else
                                                                   {<text>inactive</text>}"><span class="mdi mdi-face"></span><span>@T("Account.CustomerInfo")</span></a>
                                                            </li>
                                                        }
