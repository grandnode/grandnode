@model IList<ProductOverviewModel>
@inject DisplayOrderHomePage order 
<div class="home-page-product-grid generalMarginSupporter order-@order.HomePageProducts">
    <h2 class="generalTitle text-center">@T("HomePage.Products")</h2>
        <div class="row px-3">
            @foreach (var item in Model)
            {
                <div class="col-xl-@order.Hp_Xl col-lg-@order.Hp_Lg col-md-@order.Hp_Md col-sm-@order.Hp_Sm col-@order.Hp_Col product-container">
                    <partial name="_ProductBox" model="item" />
                </div>
            }
        </div>

</div>

