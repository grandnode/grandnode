@model Grand.Web.Models.Knowledgebase.KnowledgebaseHomePageModel

@if (Model.Categories.Any())
{
    <div id="block-knowledgebase-navigation" class="block block-knowledgebase-navigation">
        <h2 class="h5 bg-light p-3 d-lg-none"><strong>@T("Knowledgebase.Categories")</strong><span class="mdi mdi-chevron-down float-xs-right"></span></h2>
        <h5 class="generalTitle d-none d-lg-block"><strong>@T("Knowledgebase.Categories")</strong></h5>

        <div class="viewBox listbox">
            <ul class="list">
                @foreach (var category in Model.Categories)
                {
                    <partial name="_KnowledgebaseCategoryLine.Navigation" model="category" />
                }
            </ul>
        </div>
    </div>
}
