@model RecurringPaymentModel
@using Grand.Domain.Catalog;

<div class="form-horizontal">
    <vc:admin-widget widget-zone="reccuring_payment_details_info_top" additional-data="Model" />
    <div class="form-body">
        <div class="form-group">
            <admin-label asp-for="InitialOrderId" />
            <div class="col-md-9 col-sm-9">
                <label class="control-label">
                    @Html.ActionLink(T("Admin.Common.View").Text, "Edit", "Order", new { id = Model.InitialOrderId }, new { })
                </label>
            </div>
        </div>
        <div class="form-group">
            <admin-label asp-for="CustomerEmail" />
            <div class="col-md-9 col-sm-9">
                <label class="control-label">
                    @Html.ActionLink(Model.CustomerEmail, "Edit", "Customer", new { id = Model.CustomerId }, new { })
                </label>
            </div>
        </div>
        <div class="form-group">
            <admin-label asp-for="CycleLength" />
            <div class="col-md-9 col-sm-9">
                <admin-input asp-for="CycleLength" />
                <span asp-validation-for="CycleLength"></span>
            </div>
        </div>
        <div class="form-group">
            <admin-label asp-for="CyclePeriodId" />
            <div class="col-md-9 col-sm-9">
                <admin-select asp-for="CyclePeriodId" asp-items="((RecurringProductCyclePeriod)Model.CyclePeriodId).ToSelectList(Context)" />
                <span asp-validation-for="CyclePeriodId"></span>
            </div>
        </div>
        <div class="form-group">
            <admin-label asp-for="TotalCycles" />
            <div class="col-md-9 col-sm-9">
                <admin-input asp-for="TotalCycles" />
                <span asp-validation-for="TotalCycles"></span>
            </div>
        </div>
        <div class="form-group">
            <admin-label asp-for="CyclesRemaining" />
            <div class="col-md-9 col-sm-9">
                <label class="control-label">
                    @Model.CyclesRemaining
                </label>
            </div>
        </div>
        <div class="form-group">
            <admin-label asp-for="PaymentType" />
            <div class="col-md-9 col-sm-9">
                <label class="control-label">
                    @Model.PaymentType
                </label>
            </div>
        </div>
        <div class="form-group">
            <admin-label asp-for="StartDate" />
            <div class="col-md-9 col-sm-9">
                <label class="control-label">
                    @Model.StartDate
                </label>
            </div>
        </div>
        <div class="form-group">
            <admin-label asp-for="IsActive" />
            <div class="col-md-9 col-sm-9">
                <label class="mt-checkbox mt-checkbox-outline control control-checkbox">
                    <admin-input asp-for="IsActive" />
                     <div class="control__indicator"></div>
                </label>
                <span asp-validation-for="IsActive"></span>
            </div>
        </div>
    </div>
    <vc:admin-widget widget-zone="reccuring_payment_details_info_bottom" additional-data="Model" />
</div>