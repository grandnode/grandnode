@model GeneralCommonSettingsModel
    <script type="text/javascript">
    $(document).ready(function () {
        $("#@Html.FieldIdFor(model => model.SeoSettings.ConvertNonWesternChars)").click(toggleSeoCharField);

        toggleSeoCharField();
    });

    function toggleSeoCharField() {
        if ($('#@Html.FieldIdFor(model => model.SeoSettings.ConvertNonWesternChars)').is(':checked')) {
            $('#SeoCharConversion').show();
        }
        else {
            $('#SeoCharConversion').hide();
        }
    }
    </script>
