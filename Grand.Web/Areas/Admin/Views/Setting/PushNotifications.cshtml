@model Grand.Web.Areas.Admin.Models.PushNotifications.ConfigurationModel

<form asp-controller="Setting" asp-action="PushNotifications" method="post">
    <div class="col-md-12">
        <div class="portlet light form-fit">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cubes"></i>
                    @T("PushNotifications.PushNotications")
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal">
                    <div class="form-body">
                        <div class="portlet-body">
                            <div class="alert alert-info">
                                <p>@T("PushNotifications.PushNotications.Info")</p>
                            </div>
                            <div class="alert alert-danger">
                                <p>@T("PushNotifications.PushNotications.Warning")</p>
                            </div>
                            <div class="form-group">
                                <admin-label asp-for="Enabled" />
                                <div class="col-md-9">
                                    <label class="mt-checkbox mt-checkbox-outline">
                                        <admin-input asp-for="Enabled" />
                                        <span></span>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <admin-label asp-for="PrivateApiKey" />
                                <div class="col-md-9 col-sm-9">
                                    <admin-input asp-for="PrivateApiKey" />
                                </div>
                            </div>
                            <div class="form-group">
                                <admin-label asp-for="PushApiKey" />
                                <div class="col-md-9 col-sm-9">
                                    <admin-input asp-for="PushApiKey" />
                                </div>
                            </div>
                            <div class="form-group">
                                <admin-label asp-for="AuthDomain" />
                                <div class="col-md-9 col-sm-9">
                                    <admin-input asp-for="AuthDomain" />
                                </div>
                            </div>
                            <div class="form-group">
                                <admin-label asp-for="DatabaseUrl" />
                                <div class="col-md-9 col-sm-9">
                                    <admin-input asp-for="DatabaseUrl" />
                                </div>
                            </div>
                            <div class="form-group">
                                <admin-label asp-for="ProjectId" />
                                <div class="col-md-9 col-sm-9">
                                    <admin-input asp-for="ProjectId" />
                                </div>
                            </div>
                            <div class="form-group">
                                <admin-label asp-for="StorageBucket" />
                                <div class="col-md-9 col-sm-9">
                                    <admin-input asp-for="StorageBucket" />
                                </div>
                            </div>
                            <div class="form-group">
                                <admin-label asp-for="SenderId" />
                                <div class="col-md-9 col-sm-9">
                                    <admin-input asp-for="SenderId" />
                                </div>
                            </div>
                            <div class="form-group">
                                <admin-label asp-for="AllowGuestNotifications" />
                                <div class="col-md-9">
                                    <label class="mt-checkbox mt-checkbox-outline">
                                        <admin-input asp-for="AllowGuestNotifications" />
                                        <span></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-9 col-md-offset-3">
                                    <input type="submit" name="save" class="btn green" value="@T("Admin.Common.Save")" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>