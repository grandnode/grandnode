@model OrderSettingsModel

@{
    //page title
    ViewBag.Title = T("Admin.Configuration.Settings.Order").Text;
}
<form asp-controller="Setting" asp-action="Order" method="post">
    
    <div asp-validation-summary="All"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-fw fa-sliders"></i>
                        @T("Admin.Configuration.Settings.Order")
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided">
                            <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @T("Admin.Common.Save") </button>
                        </div>
                    </div>
                    <vc:admin-widget widget-zone="order_settings_buttons" additional-data="null" />
                </div>
                <div class="x_content">
                    <div class="form-horizontal">
                        <div class="form-body">
                            @await Component.InvokeAsync("StoreScopeConfiguration")
                        </div>
                    </div>
                </div>
                <div class="x_content form">
                    <vc:admin-widget widget-zone="order_settings_top" additional-data="null" />
                    <admin-tabstrip name="ordersettings-edit">
                        <items>
                            <tabstrip-item text="@T("Admin.Configuration.Settings.Order.OrderSettings")" tab-index="0">
                                <content>
                                    <div>
                                        <partial name="Order.TabOrderSettings" model="Model" />
                                    </div>
                                </content>
                            </tabstrip-item>
                            <tabstrip-item text="@T("Admin.Configuration.Settings.Order.ReturnRequestSettings")" tab-index="1">
                                <content>
                                    <div>
                                        <partial name="Order.TabReturnRequestSettings" model="Model" />
                                    </div>
                                </content>
                            </tabstrip-item>
                            <vc:admin-widget widget-zone="setting_order_details_tabs" additional-data="Model" />
                        </items>
                    </admin-tabstrip>
                    <vc:admin-widget widget-zone="order_settings_bottom" additional-data="null" />
                </div>
            </div>
        </div>
    </div>
</form>

