@model CustomerUserSettingsModel
@inject IEventPublisher eventPublisher
@{
    //page title
    ViewBag.Title = T("Admin.Configuration.Settings.CustomerUser").Text;
}
<form asp-controller="Setting" asp-action="CustomerUser" method="post">
    <antiforgery-token />
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-fw fa-sliders"></i>
                        @T("Admin.Configuration.Settings.CustomerUser")
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided">
                            <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @T("Admin.Common.Save") </button>
                        </div>
                    </div>
                    <vc:admin-widget widget-zone="customer_user_settings_buttons" additional-data="null" />
                </div>
                <div class="x_content form">
                    <admin-tabstrip name="customersettings-edit">
                        <items>
                            <tabstrip-item text="@T("Admin.Configuration.Settings.CustomerUser.CustomerSettings")" tab-index="0">
                                <content>
                                    <div>
                                        <partial name="CustomerUser.TabCustomerSettings" model="Model" />
                                    </div>
                                </content>
                            </tabstrip-item>
                            <tabstrip-item text="@T("Admin.Configuration.Settings.CustomerUser.CustomerFormFields")" tab-index="1">
                                <content>
                                    <div>
                                        <partial name="CustomerUser.TabCustomerFormFields" model="Model" />
                                    </div>
                                </content>
                            </tabstrip-item>
                            <tabstrip-item text="@T("Admin.Configuration.Settings.CustomerUser.AddressFormFields")" tab-index="2">
                                <content>
                                    <div>
                                        <partial name="CustomerUser.TabAddressFormFields" model="Model" />
                                    </div>
                                </content>
                            </tabstrip-item>
                            <tabstrip-item text="@T("Admin.Configuration.Settings.CustomerUser.DateTimeSettings")" tab-index="3">
                                <content>
                                    <div>
                                        <partial name="CustomerUser.TabDateTimeSettings" model="Model" />
                                    </div>
                                </content>
                            </tabstrip-item>
                            <tabstrip-item text="@T("Admin.Configuration.Settings.CustomerUser.ExternalAuthenticationSettings")" tab-index="4">
                                <content>
                                    <div>
                                        <partial name="CustomerUser.TabExternalAuthenticationSettings" model="Model" />
                                    </div>
                                </content>
                            </tabstrip-item>
                        </items>
                    </admin-tabstrip>
                </div>
            </div>
        </div>
    </div>

    <div asp-validation-summary="All"></div>


    @{
        //custom tabs
        var eventMessage = new AdminTabStripCreated(this.Html, "customersettings-edit");
        await eventPublisher.Publish(eventMessage);
        foreach (var eventBlock in eventMessage.BlocksToRender)
        {
            <admin-tab-append tab-strip-name="customersettings-edit" tab-name="@eventBlock.tabname" tab-content="@eventBlock.content" />
        }
    }

</form>