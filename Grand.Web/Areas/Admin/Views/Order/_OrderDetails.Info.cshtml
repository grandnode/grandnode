        <div class="form-group">
            <admin-label asp-for="PaymentStatus" asp-display-hint="false" class="control-label col-3 col-md-3 col-sm-3"></admin-label>
            <div class="col-9 col-md-9 col-sm-9">
                @{
                    var labelStatus = "";
                    switch (@Model.PaymentStatusEnum)
                    {
                        case Grand.Domain.Payments.PaymentStatus.Paid:
                            labelStatus = "success";
                            break;
                        case Grand.Domain.Payments.PaymentStatus.Pending:
                            labelStatus = "default";
                            break;
                        case Grand.Domain.Payments.PaymentStatus.Authorized:
                            labelStatus = "info";
                            break;
                        case Grand.Domain.Payments.PaymentStatus.PartiallyRefunded:
                            labelStatus = "info";
                            break;
                        case Grand.Domain.Payments.PaymentStatus.Refunded:
                            labelStatus = "warning";
                            break;
                        case Grand.Domain.Payments.PaymentStatus.Voided:
                            labelStatus = "danger";
                            break;
                    }
                }


                <h2><span class="label label-@labelStatus">@Model.PaymentStatus</span></h2>

                @if (!Model.IsLoggedInAsVendor)
                {
                    if (Model.CanCapture)
                    {
                        <input type="submit" name="captureorder" value="@T("Admin.Orders.Fields.Capture")" id="captureorder" class="k-button" onclick=" return confirm('@T("Admin.Common.AreYouSure")'); " />
                        <text>&nbsp;</text>
                    }
                    if (Model.CanMarkOrderAsPaid)
                    {
                        <button type="submit" id="markorderaspaid" name="markorderaspaid" onclick=" return confirm('@T("Admin.Common.AreYouSure")'); " class="k-button"><i class="fa fa-money" aria-hidden="true"></i>&nbsp;@T("Admin.Orders.Fields.MarkAsPaid")</button>
                    }
                    if (Model.CanRefund)
                    {
                        <input type="submit" name="refundorder" value="@T("Admin.Orders.Fields.Refund")" id="refundorder" class="k-button" onclick=" return confirm('@T("Admin.Common.AreYouSure")'); " />
                        <text>&nbsp;</text>
                    }
                    if (Model.CanRefundOffline)
                    {
                        <input type="submit" name="refundorderoffline" value="@T("Admin.Orders.Fields.RefundOffline")" id="refundorderoffline" class="k-button" onclick=" return confirm('@T("Admin.Common.AreYouSure")'); " />
                        <text>&nbsp;</text>
                    }
                    if (Model.CanPartiallyRefund)
                    {
                        <input type="submit" id="partiallyrefundorder" name="partiallyrefundorder" value="@T("Admin.Orders.Fields.PartialRefund")" onclick=" javascript:OpenWindow('@(Url.Action("PartiallyRefundOrderPopup", "Order", new { id = Model.Id, online = true, btnId = "btnRefreshPage", formId = "order-form" }))', 500, 300, true); return false; " class="k-button" />
                        <text>&nbsp;</text>
                    }
                    if (Model.CanPartiallyRefundOffline)
                    {
                        <input type="submit" id="partiallyrefundorderoffline" name="partiallyrefundorderoffline" value="@T("Admin.Orders.Fields.PartialRefundOffline")" onclick=" javascript:OpenWindow('@(Url.Action("PartiallyRefundOrderPopup", "Order", new { id = Model.Id, online = false, btnId = "btnRefreshPage", formId = "order-form" }))', 500, 300, true); return false; " class="k-button" />
                        <text>&nbsp;</text>
                    }
