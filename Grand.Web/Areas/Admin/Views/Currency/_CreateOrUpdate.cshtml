@model CurrencyModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />
<vc:admin-widget widget-zone="currency_details_top" additional-data="Model" />
<admin-tabstrip name="currency-edit">
    <items>
        <tabstrip-item text="@T("Admin.Configuration.Currencies.Info")" tab-index="0">
            <content>
                <div>
                    <partial name="_CreateOrUpdate.TabInfo" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@T("Admin.Configuration.Currencies.Stores")" tab-index="1">
            <content>
                <div>
                    <partial name="_TabStores" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <vc:admin-widget widget-zone="currency_details_tabs" additional-data="Model" />
    </items>
</admin-tabstrip>
<vc:admin-widget widget-zone="currency_details_bottom" additional-data="Model" />