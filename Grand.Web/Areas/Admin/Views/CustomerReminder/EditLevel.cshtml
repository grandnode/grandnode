@model CustomerReminderModel.ReminderLevelModel
@{
    //page title
    ViewBag.Title = T("Admin.Customers.CustomerReminder.EditLevel").Text;
}

<form asp-controller="CustomerReminder" 
      asp-action="EditLevel" 
      asp-route-CustomerReminderId="@Context.Request.Query["CustomerReminderId"]"
      asp-route-cid="@Context.Request.Query["cid"]"
      method="post" 
      id="customer-reminder-level-form">
    <antiforgery-token />
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light form-fit">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-sitemap"></i>
                        @T("Admin.Customers.CustomerReminder.EditLevel") - @Model.Name
                        <small>@Html.ActionLink("(" + T("Admin.Customers.CustomerReminder.BackToAction") + ")", "Edit", new { Id = Model.CustomerReminderId })</small>
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided">
                            <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @T("Admin.Common.Save") </button>
                            <button class="btn btn-success" type="submit" name="save-continue"><i class="fa fa-check-circle"></i> @T("Admin.Common.SaveContinue") </button>
                        </div>
                    </div>
                </div>
                <div class="portlet-body form">
                    @Html.Partial("_CreateOrUpdateLevel", Model)
                </div>
            </div>
        </div>
    </div>
</form>