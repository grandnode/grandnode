@model CustomerReminderModel.ConditionModel
@{
    //page title
    ViewBag.Title = T("Admin.Customers.CustomerReminder.EditCondition").Text;
}

<form asp-controller="CustomerReminder" asp-action="EditCondition" 
      asp-route-CustomerReminderId="@Context.Request.Query["CustomerReminderId"]"
      asp-route-cid="@Context.Request.Query["cid"]"
      method="post" id="customer-reminder-condition-form">
    
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-code-fork"></i>
                        @T("Admin.Customers.CustomerReminder.EditCondition") - @Model.Name
                        <small>@Html.ActionLink("(" + T("Admin.Customers.CustomerReminder.BackToAction") + ")", "Edit", new { Id = Model.CustomerReminderId })</small>
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided">
                            <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @T("Admin.Common.Save") </button>
                            <button class="btn btn-success" type="submit" name="save-continue"><i class="fa fa-check-circle"></i> @T("Admin.Common.SaveContinue") </button>
                        </div>
                    </div>
                </div>
                <div class="x_content form">
                   <partial name="_CreateOrUpdateCondition" model="Model" />
                </div>
            </div>
        </div>
    </div>
</form>