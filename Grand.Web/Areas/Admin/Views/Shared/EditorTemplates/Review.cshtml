@model ReviewModel
<input asp-for="Id" type="hidden" />
<div class="form-fields">
    <div class="form-group">
        <label asp-for="Title" class="col-form-label">@T("Reviews.Fields.Title"):</label>
        <input asp-for="Title" class="form-control review-title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReviewText" class="col-form-label">@T("Reviews.Fields.ReviewText"):</label>
        <textarea asp-for="ReviewText" class="form-control review-text"></textarea>
        <span asp-validation-for="ReviewText"></span>
    </div>
</div>