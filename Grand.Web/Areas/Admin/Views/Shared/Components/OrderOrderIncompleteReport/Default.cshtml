
<div id="incomplete-order-report-grid"></div>
<script>
    $(document).ready(function () {
        $("#incomplete-order-report-grid").kendoGrid({
            dataSource: {
                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("OrderIncompleteReportList", "Reports"))",
                        type: "POST",
                        dataType: "json",
                        data: addAntiForgeryToken
                    }
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors"
                },
                error: function(e) {
                    display_kendoui_grid_error(e);
                    // Cancel the changes
                    this.cancelChanges();
                },
                serverPaging: true,
                serverFiltering: true,
                serverSorting: true
            },
            pageable: {
                refresh: true,
                numeric: false,
                previousNext: false,
                info: false
            },
            editable: {
                confirmation: false,
                mode: "inline"
            },
            scrollable: false,
            columns: [{
                field: "Item",
                title: "@T("Admin.Reports.Incomplete.Item")",
                template: '<a class="k-link" href="#=ViewLink#">#=Item#</a>',
            }, {
                field: "Total",
                title: "@T("Admin.Reports.Incomplete.Total")",
            }, {
                field: "Count",
                title: "@T("Admin.Reports.Incomplete.Count")"
            }]
        });
    });
</script>
