@model InteractiveFormAttributeModel
@{
    //page title
    ViewBag.Title = T("Admin.Promotions.InteractiveForms.AddAttribute").Text;
}
<form asp-controller="InteractiveForm" asp-action="AddAttribute" method="post">
    <antiforgery-token />
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light form-fit">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-sitemap"></i>
                        @T("Admin.Promotions.InteractiveForms.AddAttribute") - @Model.Name
                        <small>@Html.ActionLink("(" + T("Admin.Promotions.InteractiveForms.BackToForm") + ")", "Edit", new { Id = Model.FormId })</small>
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided">
                            <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @T("Admin.Common.Save") </button>
                            <button class="btn btn-success" type="submit" name="save-continue"><i class="fa fa-check-circle"></i> @T("Admin.Common.SaveContinue") </button>
                        </div>
                    </div>
                </div>
                <div class="portlet-body form">
                    @Html.Partial("_CreateOrUpdateAttribute", Model)
                </div>
            </div>
        </div>
    </div>
</form>