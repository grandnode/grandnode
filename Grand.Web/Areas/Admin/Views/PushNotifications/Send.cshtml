@model Grand.Web.Areas.Admin.Models.PushNotifications.PushModel
@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.Title = T("Admin.PushNotifications.Send").Text;
}
<form asp-area="Admin" asp-controller="PushNotifications" asp-action="Send" method="post">
    
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption level-caption">
                        <i class="fa fa-cubes"></i>
                        @T("Admin.PushNotifications")
                    </div>
                </div>

                <div class="x_content form">
                    <div class="form-horizontal">
                        <div class="form-body">
                            <div class="x_content">
                                <div class="form-group">
                                    <admin-label asp-for="Title" />
                                    <div class="col-md-9 col-sm-9">
                                        <admin-input asp-for="Title" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <admin-label asp-for="MessageText" />
                                    <div class="col-md-9 col-sm-9">
                                        <admin-textarea asp-for="MessageText" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <admin-label asp-for="ClickUrl" />
                                    <div class="col-md-9 col-sm-9">
                                        <admin-input asp-for="ClickUrl" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <admin-label asp-for="PictureId" />
                                    <div class="col-md-9 col-sm-9">
                                        <admin-input asp-for="PictureId" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="offset-md-3 offset-sm-3 col-md-9 col-sm-9">
                                        <input type="submit" name="generatekey" class="k-button" value="@T("Admin.PushNotifications.Send")" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
