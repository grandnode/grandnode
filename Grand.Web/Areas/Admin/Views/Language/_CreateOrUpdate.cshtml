@model LanguageModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />
<admin-tabstrip name="language-edit">
    <items>
        <tabstrip-item text="@T("Admin.Configuration.Languages.Info")" tab-index="0">
            <content>
                <div>
                    <partial name="_CreateOrUpdate.TabInfo" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@T("Admin.Configuration.Languages.Stores")" tab-index="1">
            <content>
                <div>
                    <partial name="_TabStores" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@T("Admin.Configuration.Languages.Resources")" tab-index="2">
            <content>
                <div>
                    <partial name="_CreateOrUpdate.TabResources" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <vc:admin-widget widget-zone="language_details_tabs" additional-data="Model" />
    </items>
</admin-tabstrip>