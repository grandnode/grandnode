@model KnowledgebaseCategoryModel
@{
    //page title
    ViewBag.Title = T("Admin.ContentManagement.Knowledgebase.KnowgledgebaseCategory.EditKnowgledgebaseCategory").Text;
}
<form asp-controller="Knowledgebase" asp-action="EditCategory" method="post">
    <antiforgery-token />
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light form-fit">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-forumbee"></i>
                        @T("Admin.ContentManagement.Knowledgebase.KnowgledgebaseCategory.EditKnowgledgebaseCategory")
                        <small><i class="fa fa-arrow-circle-left"></i> @Html.ActionLink(T("Admin.ContentManagement.Knowledgebase.KnowgledgebaseCategory.BackToList").Text, "List")</small>
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided">
                            <button type="button" onclick="javascript:OpenWindow('@Url.RouteUrl("KnowledgebaseCategory", new { SeName = Model.SeName })', 800, 600, true); return false;" class="btn purple">
                                <i class="fa fa-eye"></i>
                                @T("Admin.Common.Preview")
                            </button>
                            <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @T("Admin.Common.Save") </button>
                            <button class="btn btn-success" type="submit" name="save-continue"><i class="fa fa-check-circle"></i> @T("Admin.Common.SaveContinue") </button>
                            <span id="knowledgebasecategory-delete" class="btn red"><i class="fa fa-trash-o"></i> @T("Admin.Common.Delete")</span>
                        </div>
                    </div>
                </div>
                <div class="portlet-body form">
                    @Html.Partial("_CreateOrUpdateCategory", Model)
                </div>
            </div>
        </div>
    </div>
</form>
@Html.DeleteConfirmation("DeleteCategory", "knowledgebasecategory-delete")
