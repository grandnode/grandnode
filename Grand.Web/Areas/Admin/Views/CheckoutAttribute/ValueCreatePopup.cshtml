@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminPopupLayout.cshtml";
}

@model CheckoutAttributeValueModel

@{
    //page title
    ViewBag.Title = T("Admin.Catalog.Attributes.CheckoutAttributes.Values.AddNew").Text;
}
<form asp-controller="CheckoutAttribute" asp-action="ValueCreatePopup"
      asp-route-checkoutAttributeId="@Context.Request.Query["checkoutAttributeId"]"
      asp-route-btnId="@Context.Request.Query["btnId"]"
      asp-route-formId="@Context.Request.Query["formId"]">
    <antiforgery-token />
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light form-fit">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-list-alt"></i>
                        @T("Admin.Catalog.Attributes.CheckoutAttributes.Values.AddNew")
                    </div>
                    <div class="actions">
                        <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @T("Admin.Common.Save") </button>
                        <vc:admin-widget widget-zone="checkout_attribute_value_details_buttons" additional-data="null" />
                    </div>
                </div>
                <div class="portlet-body form">
                   <partial name="_CreateOrUpdateValue" model="Model" />
                </div>
            </div>
        </div>
    </div>
</form>