@model CheckoutAttributeModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<admin-tabstrip name="checkoutattribute-edit">
    <items>
        <tabstrip-item text="@T("Admin.Catalog.Attributes.CheckoutAttributes.Info")" tab-index="0">
            <content>
                <div>
                    <partial name="_CreateOrUpdate.TabInfo" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@T("Admin.Catalog.Attributes.CheckoutAttributes.Values")" tab-index="1" id="tab-checkoutAttributesValues">
            <content>
                <div>
                    <partial name="_CreateOrUpdate.TabValues" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@T("Admin.Catalog.Attributes.CheckoutAttributes.Stores")" tab-index="2">
            <content>
                <div>
                    <partial name="_TabStores" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        <tabstrip-item text="@T("Admin.Catalog.Attributes.CheckoutAttributes.Acl")" tab-index="3">
            <content>
                <div>
                    <partial name="_TabAcl" model="Model" />
                </div>
            </content>
        </tabstrip-item>
        @if (Model.ConditionAllowed)
        {
            <tabstrip-item text="@T("Admin.Catalog.Attributes.CheckoutAttributes.Condition")" tab-index="4">
                <content>
                    <div>
                        <partial name="_CreateOrUpdate.TabCondition" model="Model" />
                    </div>
                </content>
            </tabstrip-item>
        }
        <vc:admin-widget widget-zone="checkoutattribute_details_tabs" additional-data="Model" />
    </items>
</admin-tabstrip>