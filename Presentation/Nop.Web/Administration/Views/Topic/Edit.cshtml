@model TopicModel
@{    
    //page title
    ViewBag.Title = T("Admin.ContentManagement.Topics.EditTopicDetails").Text;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light form-fit">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-hacker-news"></i>
                        @T("Admin.ContentManagement.Topics.EditTopicDetails") - @Model.SystemName
                        <small>@Html.ActionLink("(" + T("Admin.ContentManagement.Topics.BackToList") + ")", "List")</small>
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided">
                            <input type="submit" name="save" class="btn default" value="@T("Admin.Common.Save")" />
                            <input type="submit" name="save-continue" class="btn default" value="@T("Admin.Common.SaveContinue")" />
                            <span id="topic-delete" class="btn red">@T("Admin.Common.Delete")</span>
                        </div>
                    </div>
                </div>
                <div class="portlet-body form">
                    @Html.Partial("_CreateOrUpdate", Model)
                </div>
            </div>
        </div>
    </div>

}
@Html.DeleteConfirmation("topic-delete")