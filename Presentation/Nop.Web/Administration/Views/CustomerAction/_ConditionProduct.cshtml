@model CustomerActionConditionModel


<table class="adminContent">
    <tr>
        <td>
            @if (Model.Id == 0)
            {
                @T("Admin.Customers.CustomerActionCondition.SaveBeforeEdit")
            }
        </td>
    </tr>
    @if (Model.Id > 0)
    {
        <tr>
            <td>
                @{
                    var defaultGridPageSize = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().DefaultGridPageSize;
                    var gridPageSizes = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().GridPageSizes;
                }
                <div id="products-grid"></div>

                <script>
                            $(document).ready(function () {
                                $("#products-grid").kendoGrid({
                                    dataSource: {
                                        type: "json",
                                        transport: {
                                            read: {
                                                url: "@Html.Raw(Url.Action("ConditionProduct", "CustomerAction", new { customerActionId = Model.CustomerActionId, conditionId = Model.Id }))",
                                                type: "POST",
                                                dataType: "json",
                                                data: addAntiForgeryToken
                                            },
                                            destroy: {
                                                url: "@Html.Raw(Url.Action("ConditionDeletePosition", "CustomerAction", new { customerActionId = Model.CustomerActionId, conditionId = Model.Id }))",
                                                type: "POST",
                                                dataType: "json",
                                                data: addAntiForgeryToken
                                            }
                                        },
                                        schema: {
                                            data: "Data",
                                            total: "Total",
                                            errors: "Errors",
                                            model: {
                                                id: "Id",
                                            }
                                        },
                                        error: function(e) {
                                            display_kendoui_grid_error(e);
                                            // Cancel the changes
                                            this.cancelChanges();
                                        },
                                        serverPaging: true,
                                        serverFiltering: true,
                                        serverSorting: true
                                    },
                                    pageable: {
                                        refresh: true,
                                        numeric: false,
                                        previousNext: false,
                                        info: false
                                    },
                                    editable: {
                                        confirmation: false,
                                        mode: "inline"
                                    },
                                    scrollable: false,
                                    columns: [
                                    {
                                            field: "ProductName",
                                            title: "@T("Admin.Customers.CustomerActionCondition.Fields.ProductName")",
                                            width: 300,
                                            filterable: false,
                                            sortable: false
                                    },
                                    {
                                        command: { name: "destroy", text: "@T("Admin.Common.Delete")" },
                                        title: "@T("Admin.Common.Delete")",
                                        width: 100
                                    }]
                                });
                            });
                </script>
            </td>
        </tr>
        <tr>
            <td width="100%">
                <input type="submit" id="btnAddNewProduct" value="@T("Admin.Customers.CustomerActionCondition.Products.AddNew")" onclick="javascript:OpenWindow('@(Url.Action("ProductAddPopup", "CustomerAction", new { customerActionId = Model.CustomerActionId, conditionId = Model.Id, btnId = "btnRefreshProducts" }))    ', 800, 800, true); return false;" class="k-button" />
                <input type="submit" id="btnRefreshProducts" style="display: none" />
                <script type="text/javascript">
                    $(document).ready(function () {
                        $('#btnRefreshProducts').click(function () {
                            var grid = $("#products-grid").data('kendoGrid');
                            grid.dataSource.read();
                            return false;
                        });
                    });
                </script>
            </td>
        </tr>

                    }
</table>