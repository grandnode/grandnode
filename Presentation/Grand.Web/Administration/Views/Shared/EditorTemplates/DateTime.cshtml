@using System.Globalization
@model DateTime
    @{ 
        
    }
<input id="@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)" name="@ViewData.TemplateInfo.GetFullHtmlFieldName(string.Empty)" value="@((Model.ToLocalTime() > DateTime.MinValue ? Model.ToLocalTime() : DateTime.Today).ToString())" />
