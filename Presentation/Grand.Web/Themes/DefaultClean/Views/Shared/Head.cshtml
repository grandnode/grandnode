@using Grand.Core;
@using Grand.Core.Infrastructure
@using Grand.Web.Framework.Themes
@using Grand.Web.Framework.UI
@{
    var supportRtl = EngineContext.Current.Resolve<IWorkContext>().WorkingLanguage.Rtl;
    var themeName = EngineContext.Current.Resolve<IThemeContext>().WorkingThemeName;

    var browser = Request.Browser;

    if (browser.Browser == "IE" || browser.Browser == "InternetExplorer")
    {
        Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/ie.css", themeName));
    }
    //add browser specific CSS files
    if (supportRtl)
    {
        Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/style.rtl.css", themeName));
    }

    Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/style.css", themeName));
    Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/font-awesome.css", themeName));
    Html.AppendCssFileParts("~/Content/bootstrap/bootstrap.css");

Html.AppendScriptParts("~/Content/bootstrap/bootstrap.js");
Html.AppendScriptParts("~/Scripts/public.ajaxcart.js");
Html.AppendScriptParts("~/Scripts/public.common.js");
Html.AppendScriptParts("~/Scripts/jquery-migrate-1.2.1.min.js");
Html.AppendScriptParts("~/Scripts/jquery-ui-1.10.3.custom.min.js");
Html.AppendScriptParts("~/Scripts/jquery.validate.unobtrusive.min.js");
Html.AppendScriptParts("~/Scripts/jquery.validate.min.js");
Html.AppendScriptParts("~/Content/bootstrap/tether.min.js");

Html.AppendScriptParts("~/Scripts/jquery-1.10.2.min.js");

}