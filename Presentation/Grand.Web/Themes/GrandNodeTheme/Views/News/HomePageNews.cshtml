@model HomePageNewsItemsModel
@using Grand.Web.Models.News;
@if (Model.NewsItems.Count > 0)
{
    <div class="news-list-homepage">
        <div class="title">
            <strong>@T("News")</strong>
        </div>
        <div class="news-items">
            @foreach (var item in Model.NewsItems)
            {
                <div class="news-item">
                    <div class="news-head">
                        <a class="news-title" href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })">@item.Title</a>
                        <span class="news-date">@item.CreatedOn.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="news-body">
                        @Html.Raw(item.Short)
                    </div>
                    <div class="buttons">
                        <a href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })" class="waves-effect waves-green btn-flat">@T("News.MoreInfo")</a>
                    </div>
                </div>
            }
        </div>
        <div class="view-all">
            <button onclick="location.href='@Url.RouteUrl("NewsArchive")'" class="btn-flat waves-effect waves-green" type="submit">
                @T("News.ViewAll")
            </button>
        </div>
        
    </div>

}