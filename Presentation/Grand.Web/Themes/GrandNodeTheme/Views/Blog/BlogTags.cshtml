@model BlogPostTagListModel
@using Grand.Web.Models.Blogs
@if (Model.Tags.Count > 0)
{
    <div class="block block-popular-blogtags">
        <div class="waves-effect title">
            <h5>@T("Blog.TagCloud")</h5>
        </div>
        <div class="listbox">
            <ul class="tags">
                @foreach (var item in Model.Tags)
                {
                    <li><a class="chip" href="@Url.RouteUrl("BlogByTag", new { tag = item.Name })" @*style="font-size:@(Model.GetFontSize(item))%;"*@>@item.Name</a>
                    </li>
                }
            </ul>
        </div>
    </div>
}