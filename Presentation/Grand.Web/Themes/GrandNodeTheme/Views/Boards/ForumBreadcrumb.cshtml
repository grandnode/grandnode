@model ForumBreadcrumbModel
@using Grand.Core.Domain.Common;
@using Grand.Core.Infrastructure;
@using Grand.Web.Models.Boards;
@{
    var breadcrumbDelimiter = EngineContext.Current.Resolve<CommonSettings>().BreadcrumbDelimiter;
}
<nav>
        
    <div class="nav-wrapper">
        <div class="col s12">
            
            <a href="@Url.RouteUrl("HomePage")" class="breadcrumb" title="@T("Forum.Breadcrumb.HomeTitle")">@T("Forum.Home")</a>
            
                @Html.RouteLink(T("Forum.Forums").Text, "Boards", null, new { title = T("Forum.Breadcrumb.ForumHomeTitle"), @class = "breadcrumb" })
            @if (!String.IsNullOrEmpty(Model.ForumGroupId))
            {
                    @Html.RouteLink(Model.ForumGroupName, "ForumGroupSlug",
                 new { id = Model.ForumGroupId, slug = Model.ForumGroupSeName },
                new { @class = "breadcrumb", title = String.Format("{0}: {1} ", T("Forum.Breadcrumb.ForumGroupTitle"), Model.ForumGroupName) })
            }
            @if (!String.IsNullOrEmpty(Model.ForumId))
            {
                    @Html.RouteLink(Model.ForumName, "ForumSlug",
                 new { id = Model.ForumId, slug = Model.ForumSeName },
                new {  @class = "breadcrumb", title = String.Format("{0}: {1} ", T("Forum.Breadcrumb.ForumTitle"), Model.ForumName) })
            }
            @if (!String.IsNullOrEmpty(Model.ForumTopicId))
            {
                    @Html.RouteLink(Model.ForumTopicSubject, "TopicSlug",
                 new { id = Model.ForumTopicId, slug = Model.ForumTopicSeName },
                new { @class = "breadcrumb", title = String.Format("{0}: {1} ", T("Forum.Breadcrumb.TopicTitle"), Model.ForumTopicSubject) })
            }
        </div>
    </div>
</nav>




