@using Grand.Core
@using Grand.Core.Infrastructure
@using Grand.Services.Localization
@using Grand.Web.Framework.Themes

    <header>
        @Html.Widget("header")
    <nav class="navbar fixed-top navbar-light bg-faded navUp p-0">
        <div class="collapse btn-toolbar generalDropDown" id="generalDropDown">
            @Html.Action("TaxTypeSelector", "Common")
            @Html.Action("CurrencySelector", "Common")
            @Html.Action("LanguageSelector", "Common")
        </div>
        <div class="container">
            <ul class="nav navbar-nav header-links pl-0 flex-row">
                @Html.Action("HeaderLinks", "Common")
                <li class="nav-item float-xs-right hidden-md-up ml-auto">
                    <a class="btn btn-outlined-info general-opener" data-toggle="collapse" aria-expanded="false" aria-controls="generalDropDown">
                        <span class="fa fa-cogs" aria-hidden="true"></span>
                    </a>
                </li>
                <li class="nav-item float-xs-right hidden-sm-down ml-auto">
                    <div class="generalDropDown btn-toolbar float-xs-right">
                            @Html.Action("TaxTypeSelector", "Common")
                            @Html.Action("CurrencySelector", "Common")
                            @Html.Action("LanguageSelector", "Common")
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div class="headBottom d-md-inline-flex d-sm-grid text-md-left text-center mt-3 mb-3">
            <div class="col header-logo pr-0 pl-0">
                @Html.Action("Logo", "Common")
            </div>
            <div class="col formSearch pr-0 pl-0">
                @Html.Action("SearchBox", "Catalog")
            </div>
    </div>
</header>