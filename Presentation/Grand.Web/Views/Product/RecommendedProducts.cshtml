@model IList<ProductOverviewModel>

@using Grand.Web.Models.Catalog;

@if (Model.Count > 0)
{
    <div class="product-grid recommended-product-grid">
        <div class="title">
            <strong>@T("HomePage.Recommended.Products")</strong>
        </div>
        <div class="item-grid">
            @foreach (var item in Model)
            {
                <div class="item-box">
                    @Html.Partial("_ProductBox", item)
                </div>
            }
        </div>
    </div>
}